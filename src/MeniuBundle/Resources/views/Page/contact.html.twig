{# src/MeniuBundle/Resources/views/Page/contact.html.twig #}
{% extends 'MeniuBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact </h1>
    </header>
 
    {% for flashMessage in app.session.flashbag.get('meniu-notice') %}
        <div class="meniu-notice">
              {{ flashMessage }}
        </div>
    {% endfor %}
    <p>Vrei sa contactezi restaurantul</p>

    <form action="{{ path('MeniuBundle_contact') }}" method="post" {{ form_enctype(form) }} class="meniu">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>

{% endblock %}
